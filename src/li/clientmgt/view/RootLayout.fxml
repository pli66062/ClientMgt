<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="li.clientmgt.view.RootLayoutController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#handleClear" text="Clear" />
                  <MenuItem mnemonicParsing="false" onAction="#handleExit" text="Exit" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Student">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#handleNewStudent" text="New" />
                  <MenuItem mnemonicParsing="false" onAction="#handleOpenStudent" text="Open..." />
                  <MenuItem mnemonicParsing="false" onAction="#handleSaveStudent" text="Save" />
                  <MenuItem mnemonicParsing="false" onAction="#handleSaveAsStudent" text="Save As..." />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Lesson">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#handleNewLesson" text="New" />
                  <MenuItem mnemonicParsing="false" onAction="#handleOpenLesson" text="Open..." />
                  <MenuItem mnemonicParsing="false" onAction="#handleSaveLesson" text="Save" />
                  <MenuItem mnemonicParsing="false" onAction="#handleSaveAsLesson" text="Save As..." />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Help">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#handleAbout" text="About" />
               </items>
            </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
